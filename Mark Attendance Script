function appendMorningStaffAtt() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();

  //Collect the data.
  const sourceRange = ss.getRangeByName("DMorningStaff");
  const clearRange = ss.getRangeByName("MorningStaff");
  const sourceValues = sourceRange.getValues().flat();
  
  //Validate that all the cells are filled.
  const emptyCell = sourceValues.findIndex(cell => cell == "");
  if(emptyCell !== -1){
    const ui = SpreadsheetApp.getUi();
    ui.alert(
      "Incomplete Input.",
      "Please enter date & mark attendance for all morning staff before submitting.",
      ui.ButtonSet.OK
    );
    return;
  }

  //Gather current date time state and user email.
  const date = new Date();
  const email = Session.getActiveUser().getEmail();
  const data = [...sourceValues, email, date];
  console.log(data);

  //Append the data in a sheet.
  const destinationSheet = ss.getSheetByName("MSA");
  destinationSheet.appendRow(data);

  //clear the source sheet rows.
  clearRange.clearContent();
  ss.toast("Attendance Marked Successfully.");
}

//2. Evening Staff Attendance
function appendEveningStaffAtt() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();

  //Collect the data.
  const sourceRange = ss.getRangeByName("DEveningStaff");
  const clearRange = ss.getRangeByName("EveningStaff");
  const sourceValues = sourceRange.getValues().flat();
  
  //Validate that all the cells are filled.
  const emptyCell = sourceValues.findIndex(cell => cell == "");
  if(emptyCell !== -1){
    const ui = SpreadsheetApp.getUi();
    ui.alert(
      "Incomplete Input.",
      "Please enter date & mark attendance for all the evening staff before submitting.",
      ui.ButtonSet.OK
    );
    return;
  }

  //Gather current date time state and user email.
  const date = new Date();
  const email = Session.getActiveUser().getEmail();
  const data = [...sourceValues, email, date];
  console.log(data);

  //Append the data in a sheet.
  const destinationSheet = ss.getSheetByName("ESA");
  destinationSheet.appendRow(data);

  //clear the source sheet rows.
  clearRange.clearContent();
  ss.toast("Attendance Marked Successfully.");
}
